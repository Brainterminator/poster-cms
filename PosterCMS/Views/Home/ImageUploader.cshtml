@{

}

@model ImageModel
<h1>Upload Image</h1>
<form asp-action="UploadImage" method="post" enctype="multipart/form-data">
    <div>
        <label>Image</label>
        <input type="file" asp-for="ImageFile" />
    </div>
    <div>
        <div class="buttons">
            <input type="submit" value="Upload">
            <label>@ViewBag.Message</label>
        </div>
    </div>
</form>