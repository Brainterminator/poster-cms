@{
    var email = Context.Request.Cookies["AuthEmail"];
    var isLoggedIn = !string.IsNullOrEmpty(email);
    var pagesize = Context.Request.Cookies["PageSize"];
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PosterCMS</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="/css/style.css" media="screen" />
    <link rel="stylesheet" href="/css/print-a4.css" media="print and (orientation: portrait)" />
    <link rel="stylesheet" href="/css/print-a3.css" media="print and (orientation: landscape)" />
</head>

<body>
    <header>
        <a asp-area="" asp-controller="Home" asp-action="Index">PosterCMS</a>
        <nav>
            <div id="pageSizeToggle" class="din-switch @(pagesize == "A3" ? "flipped" : "")">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <div class="page">A4</div>
                    </div>
                    <div class="flip-card-back">
                        <div class="page">A3</div>
                    </div>
                </div>
            </div>
            @if (isLoggedIn)
            {
                <a asp-area="" asp-controller="Home" asp-action="Account">Account</a>
            }
            else
            {
                <a asp-area="" asp-controller="Home" asp-action="SignIn">Login / Register</a>
            }
        </nav>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const pageSizeToggle = document.getElementById('pageSizeToggle');
            if (!pageSizeToggle) return;

            pageSizeToggle.addEventListener('click', function () {
                // 1. Animate the button flip
                this.classList.toggle('flipped');

                // 2. Determine the new page size
                const isA3 = this.classList.contains('flipped');
                const newPageSize = isA3 ? 'A3' : 'A4';

                // 3. Set the cookie
                document.cookie = `PageSize=${newPageSize}; path=/; max-age=2592000; SameSite=Lax`;

                // 4. Broadcast a custom event with the new page size
                const event = new CustomEvent('pageSizeChanged', {
                    detail: { pageSize: newPageSize }
                });
                document.dispatchEvent(event);
            });
        });
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
